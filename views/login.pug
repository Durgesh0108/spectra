extends base

block content 

    section.bg-gray-100.py-10(style='min-height: 86vh')
        .container.max-w-screen-xl.mx-auto.px-4
            // COMPONENT: SIGN IN
            .mt-10.mb-20.p-4.mx-auto.rounded.bg-white.shadow-lg(style='max-width:360px' class='md:p-7')
                form#form--login
                    h2.mb-5.text-2xl.font-semibold Sign in
                    .mb-4
                        label.block.mb-1(for='email')  Email 
                        input#email.appearance-none.border.border-gray-200.bg-gray-100.rounded-md.py-2.px-3.w-full(class='hover:border-gray-400 focus:outline-none focus:border-gray-400' type='text' placeholder='Type here')
                    .mb-4
                        label.block.mb-1(for='password')  Password 
                        input#password.appearance-none.border.border-gray-200.bg-gray-100.rounded-md.py-2.px-3.w-full(class='hover:border-gray-400 focus:outline-none focus:border-gray-400' type='password' placeholder='Type here')
                    label.flex.items-center.w-max.mb-5
                        input.h-4.w-4(checked='' name='' type='checkbox')
                        span.ml-2.inline-block.text-gray-500  Remember me 
                    button.px-4.py-2.text-center.w-full.inline-block.text-white.bg-blue-600.border.border-transparent.rounded-md(class='hover:bg-blue-700' href='#')  Sign in 
                    // Inline style for decoration
                    .text-center.border-b.my-5(style='line-height: 0.1rem;')
                        span.px-3.bg-white.text-gray-400 or
                    p.text-center.mt-5
                        | Don't have an account? 
                        a.text-blue-500(href='/signup') Sign up
            // COMPONENT: SIGN IN //END
