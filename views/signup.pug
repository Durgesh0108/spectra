extends base

block content 

    section.bg-gray-100.py-10(style='min-height: 86vh')
        .container.max-w-screen-xl.mx-auto.px-4
            // COMPONENT: SIGN IN
            .mt-10.mb-20.p-4.mx-auto.rounded.bg-white.shadow-lg(style='max-width:480px' class='md:p-7')
                form#form--signup
                    h2.mb-5.text-2xl.font-semibold Sign up
                    //- .grid.gap-x-2(class='md:grid-cols-1')
                    .mb-4
                        label.block.mb-1  Name 
                        input.appearance-none.border.border-gray-200.bg-gray-100.rounded-md.py-2.px-3.w-full(class='hover:border-gray-400 focus:outline-none focus:border-gray-400' id="name" type='text' placeholder='Type here')
                    // grid
                    .mb-4
                        label.block.mb-1  Email 
                        input.appearance-none.border.border-gray-200.bg-gray-100.rounded-md.py-2.px-3.w-full(class='hover:border-gray-400 focus:outline-none focus:border-gray-400' id="email" type='text' placeholder='Type here')
                    .mb-4
                        label.block.mb-1  Password 
                        input.appearance-none.border.border-gray-200.bg-gray-100.rounded-md.py-2.px-3.w-full(class='hover:border-gray-400 focus:outline-none focus:border-gray-400' id="password" type='password' placeholder='Type here')
                    .mb-4
                        label.block.mb-1  Confirm password 
                        input.appearance-none.border.border-gray-200.bg-gray-100.rounded-md.py-2.px-3.w-full(class='hover:border-gray-400 focus:outline-none focus:border-gray-400' id="passwordConfirm" type='password' placeholder='Type here')
                    .mb-4
                        label.block.mb-1  Photo 
                        input.appearance-none.border.border-gray-200.bg-gray-100.rounded-md.py-2.px-3.w-full(class='hover:border-gray-400 focus:outline-none focus:border-gray-400' id="photo" type='file' placeholder='Insert Your Photo')
                    button.my-2.px-4.py-2.text-center.w-full.inline-block.text-white.bg-blue-600.border.border-transparent.rounded-md(class='hover:bg-blue-700')
                        | Register
                    label.flex.items-center.w-max.my-4
                        input.h-4.w-4(checked='' name='' type='checkbox')
                        span.ml-2.inline-block  I agree with Terms and Conditions 
                    hr
                    p.text-center.mt-5
                        | Already have an account? 
                        a.text-blue-500(href='/login') Sign in
        // COMPONENT: SIGN IN //END